---
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  slug: string;
  tags?: string[];
  hero?: ImageMetadata;
  heroAlt?: string;
}

const { title, description, slug, tags = [], hero, heroAlt } = Astro.props;
---

<article class="project-card">
  <a href={`/projects/${slug}/`}>
    {hero && (
      <div class="card-hero">
        <Image
          src={hero}
          alt={heroAlt || title}
          widths={[400, 600, 800]}
          sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
          style={`view-transition-name: hero-${slug}`}
        />
      </div>
    )}
    <div class="card-body">
      <h3 class="card-title">{title}</h3>
      <p class="card-description">{description}</p>
      {tags.length > 0 && (
        <ul class="card-tags">
          {tags.map((tag) => <li>{tag}</li>)}
        </ul>
      )}
    </div>
  </a>
</article>

<style>
  .project-card {
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    background: var(--color-surface);
    overflow: hidden;
    transition: box-shadow var(--transition-base), border-color var(--transition-base), opacity var(--transition-base);
    container-type: inline-size;
  }

  .project-card:hover {
    border-color: var(--color-accent);
    box-shadow: var(--glow-accent);
  }

  a {
    color: inherit;
    text-decoration: none;
    display: block;
  }

  .card-hero {
    overflow: hidden;

    & img {
      width: 100%;
      aspect-ratio: 16 / 9;
      object-fit: cover;
      transition: transform var(--transition-slow);
    }
  }

  .project-card:hover .card-hero img {
    transform: scale(1.03);
  }

  @container (min-width: 28rem) {
    .card-hero img {
      aspect-ratio: 2 / 1;
    }
  }

  .card-body {
    padding: var(--space-lg);
  }

  .card-title {
    font-family: var(--font-display);
    color: var(--color-accent);
    margin-bottom: var(--space-sm);
  }

  .card-description {
    color: var(--color-fg-muted);
    font-size: 0.9375rem;
  }

  .card-tags {
    display: flex;
    gap: var(--space-sm);
    list-style: none;
    margin-top: var(--space-md);
    flex-wrap: wrap;
  }

  .card-tags li {
    font-size: 0.75rem;
    padding: var(--space-xs) var(--space-sm);
    border: 1px solid var(--color-border);
    border-radius: 0.25rem;
    color: var(--color-fg-muted);
  }
</style>
